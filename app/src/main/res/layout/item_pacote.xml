<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_pacote_imgFotoCidade"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/recife_pe"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <TextView
        android:id="@+id/item_pacote_txtNomeCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recife"
        android:textSize="14sp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:drawable/screen_background_dark_transparent"
        app:layout_constraintStart_toStartOf="@+id/item_pacote_imgFotoCidade"
        app:layout_constraintEnd_toEndOf="@+id/item_pacote_imgFotoCidade"
        app:layout_constraintTop_toTopOf="@+id/item_pacote_imgFotoCidade"
        app:layout_constraintBottom_toBottomOf="@+id/item_pacote_imgFotoCidade"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.0" />

    <View
        android:id="@+id/item_pacote_viewDivisor"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pacote_imgFotoCidade"/>

    <TextView
        android:id="@+id/item_pacote_txt2Dias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 dias"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_pacote_viewDivisor"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/item_pacote_txtValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 243,99"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintTop_toBottomOf="@id/item_pacote_txt2Dias"
        app:layout_constraintStart_toStartOf="@id/item_pacote_txt2Dias"/>

</android.support.constraint.ConstraintLayout>